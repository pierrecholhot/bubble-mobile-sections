{
  "name": "bubble-mobile-sections",
  "version": "2.0.3",
  "description": "Bottom navigation for Home Assistant Lovelace sections dashboards on mobile. It builds the buttons automatically from your Bubble Card separators.",
  "type": "module",
  "main": "dist/bubble-mobile-sections.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:pierrecholhot/bubble-mobile-sections.git"
  },
  "author": "Pierre Cholhot",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "check": "eslint src && prettier --check .",
    "fix": "eslint src --fix && prettier --write .",
    "preversion": "npm run check",
    "version": "npm run build && git add dist",
    "postversion": "git push --follow-tags",
    "bump:patch": "npm version patch",
    "bump:minor": "npm version minor",
    "bump:major": "npm version major",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "10.0.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "globals": "17.3.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.1",
    "vite": "7.3.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": "prettier --write"
  }
}
